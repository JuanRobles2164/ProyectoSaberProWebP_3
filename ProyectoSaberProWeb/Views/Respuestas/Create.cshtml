    <script type="text/javascript">
    $(document).ready(function () {
        $('rb_custom').attr('checked', '0');
    });
    function guardaProgreso(opcionId, preguntaId){
        $.ajax({
            url: '@Url.Action("GuardaRespuesta", "Respuestas")',
            type: 'POST',
            data: {
                'OpcionId': opcionId,
                'PreguntaId': preguntaId
