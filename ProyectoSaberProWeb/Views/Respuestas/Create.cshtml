@model ProyectoSaberProWeb.Models.ViewModels.RespondeCompetenciaPruebaViewModel

@{
    ViewBag.Title = "Responder prueba";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Respuestas", FormMethod.Post))
{
    <div class="container">
        @foreach (var item in Model.ListaPreguntas)
        {
            <div class="container-sm">
                <h5>
                    @item.Contexto
                </h5>
                <label>
                    @item.Descripcion
                </label>
                @foreach (var i in Model.OpcionesPregunta.Where(x => x.Key == item.ID))
                {
                    foreach (var j in i.Value)
                    {
                        <div>
                            @Html.RadioButtonFor(z => j.Correcta, "true", 
                            htmlAttributes: 
                                new { 
                                    @class = "rb_custom", 
                                    @Name = "PreguntaId_" + j.PreguntaId, 
                                    @Onclick = "guardaProgreso("+j.ID+", "+item.ID+")"
                                    })
                            <p>
                                @j.Descripcion
                            </p>
                        </div>
                    }
                    <br />
                    <br />
                }
            </div>
        }
    </div>
    <button type="submit">
        Enviar
    </button>
}


