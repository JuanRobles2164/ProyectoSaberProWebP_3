@model ProyectoSaberProWeb.Models.ViewModels.UserViewModel
@using PagedList.Mvc
@Styles.Render("~/Content/PagedList.css")

@{
    ViewBag.Title = "Index";
}

<h2>Docentes</h2>
<p>
    @using (Html.BeginForm())
    {
    <p align="right">
        Buscar por Nombres o Apellidos: @Html.TextBox("SearchString")
        <input type="submit" value="Buscar" class="btn btn-primary" />
    </p>
}
    </p>
    <table class="table">
        <tr>
            <th>
                <a href="@Url.Action("IndexDocentes", "Administrador", new { sortOrder = ViewBag.NombreSortParm })">
                    @Html.DisplayNameFor(model => model.Usuario.Nombres)
                </a>
            </th>
            <th>
                <a href="@Url.Action("IndexDocentes", "Administrador", new { sortOrder = ViewBag.ApellidosSortParm })">
                    @Html.DisplayNameFor(model => model.Usuario.Apellidos)
                </a>
            </th>
            <th>
                <a href="@Url.Action("IndexDocentes", "Administrador", new { sortOrder = ViewBag.EmailSortParm })">
                    @Html.DisplayNameFor(model => model.Usuario.Email)
                </a>
            </th>
            <th>
                <a href="@Url.Action("IndexDocentes", "Administrador", new { sortOrder = ViewBag.UserNameSortParm })">
                    @Html.DisplayNameFor(model => model.Usuario.UserName)
                </a>
            </th>
            <th>Acciones</th>
        </tr>

        @foreach (var item in Model.ListaUsuariosP)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombres)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellidos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.Id })">
                        <i class="fas fa-pencil-alt">
                        </i>
                    </a>
                    &nbsp;&nbsp;
                    <a href="@Url.Action("Details", new { id = item.Id })">
                        <i class="fas fa-search-plus">
                        </i>
                    </a>
                    &nbsp;&nbsp;
                    <a href="@Url.Action("Delete", new { id = item.Id })">
                        <i class="fas fa-trash-alt">
                        </i>
                    </a>
                </td>
            </tr>
        }

    </table>
    Pagina @(Model.ListaUsuariosP.PageCount < Model.ListaUsuariosP.PageNumber ? 0 : Model.ListaUsuariosP.PageNumber) de @Model.ListaUsuariosP.PageCount

    @Html.PagedListPager(Model.ListaUsuariosP, page => Url.Action("Index",
        new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
    <style>
        .fa-pencil-alt {
            color: #EFD30B;
        }

            .fa-pencil-alt:hover {
                color: #D3B70B;
            }

        .fa-trash-alt {
            color: #DE0E0E;
        }

            .fa-trash-alt:hover {
                color: #A00C0C;
            }
    </style>
